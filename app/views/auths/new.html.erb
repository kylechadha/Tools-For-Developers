<% @navigation = 'layouts/navigation' %>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">

    <h2>Log In</h2>

    <%= bootstrap_form_for @user, url: auth_path, method: 'post' do |f| %>
      <%= f.text_field :email, placeholder: 'Enter email' %>
      <%= f.password_field :password, placeholder: 'Enter password' %>
      <%= f.submit 'Log in' %>
    <% end %>

  </div>
  <div class="col-md-4"></div>
</div>