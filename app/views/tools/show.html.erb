<% @page = "tool-show" %>
<% @navigation = 'layouts/navigation' %>

<div class="row">

  <div class="col-md-6">
    <div class="tool-screenshot" style="background-image: url('<%= @tool.screenshot_file_size ? @tool.screenshot.url : ""  %>')">
    </div>
  </div>

  <div class="col-md-6">
    <div class="tool-info">
      <h1><%= @tool.name %></h1>
      <h4><%= @tool.desc %></h4>
      <div class="tool-apptype">
        <h3><%= @tool.app_type_id %></h3>    
        <h4><a target="_blank" href="<%= @tool.url %>">Link to Download</a></h4>
      </div>
    </div>
  </div>

</div>

<br><br>
<div class="row">
  <%= link_to "Go back", tools_path %>
</div>